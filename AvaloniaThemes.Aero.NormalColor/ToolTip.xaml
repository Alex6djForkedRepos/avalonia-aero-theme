<Style xmlns="https://github.com/avaloniaui" Selector="ToolTip">
  <Setter Property="Background" Value="{DynamicResource AeroToolTipBackground}"/>
  <Setter Property="BorderBrush" Value="{DynamicResource AeroToolTipBorderBrush}"/>
  <Setter Property="Foreground" Value="{DynamicResource AeroForeground}"/>
  <Setter Property="BorderThickness" Value="1"/>
  <Setter Property="Padding" Value="4,2"/>
  <Setter Property="Template">
    <ControlTemplate>
      <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="3">
        <ContentPresenter Name="PART_ContentPresenter" TextBlock.Foreground="{TemplateBinding Foreground}" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}"  Padding="{TemplateBinding Padding}"/>
      </Border>
    </ControlTemplate>
  </Setter>
</Style>